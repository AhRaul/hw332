<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/flatButtonText"
        style="?attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:elevation="0dp"
        android:text="flat button text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/flatButtonTextDrawable"
        android:layout_width="242dp"
        android:layout_height="36dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/flat_button"
        android:elevation="0dp"
        android:text="flat button text Drawable"
        app:layout_constraintStart_toStartOf="@+id/flatButtonText"
        app:layout_constraintTop_toBottomOf="@+id/flatButtonText" />

    <Button
        android:id="@+id/rized_button"
        android:layout_width="159dp"
        android:layout_height="47dp"
        android:layout_marginTop="36dp"
        android:text="rized Button"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="@+id/flatButtonTextDrawable"
        app:layout_constraintTop_toBottomOf="@+id/flatButtonTextDrawable" />

    <Button
        android:id="@+id/rized_button_bg"
        android:layout_width="159dp"
        android:layout_height="47dp"
        android:layout_marginTop="36dp"
        android:background="@color/colorAccent"
        android:text="rized button bg"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="@+id/rized_button"
        app:layout_constraintTop_toBottomOf="@+id/rized_button" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="48dp"
        android:clickable="true"
        android:elevation="8dp"
        android:scaleType="center"
        app:fabSize="mini"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rized_button_bg"
        app:srcCompat="@android:drawable/sym_action_chat" />

</android.support.constraint.ConstraintLayout>